{
    "info": {
        "name": "Heart Dating App API",
        "description": "Complete API collection for testing",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [{
            "name": "Auth",
            "item": [{
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": { "raw": "http://localhost:5000/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "auth", "register"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"email\":\"test@example.com\",\"password\":\"Test1234\",\"confirmPassword\":\"Test1234\"}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": { "raw": "http://localhost:5000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "auth", "login"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"email\":\"test@example.com\",\"password\":\"Test1234\"}"
                        }
                    }
                },
                {
                    "name": "Verify Email",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }],
                        "url": { "raw": "http://localhost:5000/api/auth/verify-email", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "auth", "verify-email"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"email\":\"test@example.com\",\"code\":\"123456\"}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [{
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/users/profile", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "users", "profile"] }
                    }
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PUT",
                        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/users/profile", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "users", "profile"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"fullName\":\"John Doe\",\"age\":28,\"gender\":\"Male\",\"orientation\":\"Female\",\"location\":\"New York, NY\",\"bio\":\"Love hiking\"}"
                        }
                    }
                },
                {
                    "name": "Get Discover Profiles",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/users/discover", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "users", "discover"] }
                    }
                },
                {
                    "name": "Like User",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/users/like/USER_ID", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "users", "like", "USER_ID"] }
                    }
                },
                {
                    "name": "Get Matches",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/users/matches", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "users", "matches"] }
                    }
                }
            ]
        },
        {
            "name": "Messages",
            "item": [{
                    "name": "Get Chat History",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/messages/USER_ID", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "messages", "USER_ID"] }
                    }
                },
                {
                    "name": "Send Message",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer YOUR_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/messages", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "messages"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"to\":\"USER_ID\",\"text\":\"Hello!\"}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [{
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer ADMIN_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/admin/users", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "admin", "users"] }
                    }
                },
                {
                    "name": "Ban User",
                    "request": {
                        "method": "POST",
                        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer ADMIN_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/admin/ban/USER_ID", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "admin", "ban", "USER_ID"] },
                        "body": {
                            "mode": "raw",
                            "raw": "{\"reason\":\"Violates community guidelines\"}"
                        }
                    }
                },
                {
                    "name": "Get Admin Logs",
                    "request": {
                        "method": "GET",
                        "header": [{ "key": "Authorization", "value": "Bearer ADMIN_TOKEN" }],
                        "url": { "raw": "http://localhost:5000/api/admin/logs", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "admin", "logs"] }
                    }
                }
            ]
        }
    ]
}